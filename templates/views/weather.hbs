    <div class="container-fluid weather ">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">

                <div class="main_content">
                    <div class="temp_form">
                        <form action="">
                            <input type="text" id="cityName" autocomplete="" placeholder="Enter your city name">
                            <input type="submit" value="search" id="submitBtn">
                        </form>
                    </div>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">21 july</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get output here</p>
                        <div class="middle_layer date_hide">
                            <p id="temps"><span id="temp">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fas fa-clouds"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    </div>



    {{>footer}}
    <script>

        let getCurrentDay = () => {
            let dayarr = new Array(7);
            dayarr[0] = "sunday"
            dayarr[1] = "monday"
            dayarr[2] = "tuesday"
            dayarr[3] = "wednesday"
            dayarr[4] = "thursday"
            dayarr[5] = "friday"
            dayarr[6] = "saturday"

            let day = document.getElementById('day')
            let presentday = new Date();

            day.innerText = dayarr[presentday.getDay()];
        }

        getCurrentDay();

             let  getCurrentTime = ()=>{
             let month = [
               "january",
               "Feb" ,
               "Mar",
               "Apr",
               "May",
               "june",
               "July",
               "Agu",
               "Sept",
               "Oct",
               "Nov",
               "Dec"
             ];
             
         let presentdate = new Date();
        let date = presentdate.getDate();
         months =  month[presentdate.getMonth()];

         hours = presentdate.getHours();
         mins = presentdate.getMinutes();

         let periods = 'AM';

         if(hours > 11){
           periods= "PM";
           
           if(hours > 12){
             hours = hours - 12;
           }
         }

         if(mins < 10){
           mins = "0" + mins;
         }
        //  console.log(date + months + hours + mins + periods)
         

         let dates = document.getElementById('today_date')
         dates.innerText = `
          ${date} ${months}   | ${hours}:${mins} ${periods}
         `;

      }

        
        getCurrentTime();
    </script>

